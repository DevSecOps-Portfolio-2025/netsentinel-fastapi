# ============================================
# NetSentinel SIEM - Environment Variables
# ============================================
# Copiar este archivo a .env y configurar los valores reales

# ============================================
# MONGODB
# ============================================
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=netsentinel2025
MONGO_DATABASE=netsentinel
MONGO_URI=mongodb://admin:netsentinel2025@mongodb:27017

# ============================================
# REDIS
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379  # Puerto interno del container
REDIS_EXTERNAL_PORT=6380  # Puerto expuesto en host
REDIS_PASSWORD=netsentinel2025
REDIS_DB=0

# ============================================
# KAFKA
# ============================================
KAFKA_BOOTSTRAP_SERVERS=kafka:9093
KAFKA_TOPIC_LOGS=logs-topic
KAFKA_TOPIC_ALERTS=alerts-topic
KAFKA_GROUP_ID_PROCESSOR=processor-group

# ============================================
# INGESTOR SERVICE (FastAPI)
# ============================================
INGESTOR_PORT=8001
INGESTOR_HOST=0.0.0.0
INGESTOR_WORKERS=4
LOG_LEVEL=INFO

# ============================================
# PROCESSOR SERVICE
# ============================================
PROCESSOR_WINDOW_SECONDS=60
PROCESSOR_FAILED_LOGIN_THRESHOLD=5
PROCESSOR_BATCH_SIZE=100

# ============================================
# SECURITY
# ============================================
API_KEY=your-secure-api-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# ============================================
# MONITORING
# ============================================
ENABLE_METRICS=true
METRICS_PORT=9090
